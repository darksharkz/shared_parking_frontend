<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView android:id="@+id/list_spots_parkingspaceid_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"/>

    <TextView android:id="@+id/list_spots_city"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_spots_parkingspaceid_text"
        android:layout_toEndOf="@id/list_spots_parkingspaceid_text"
        android:layout_margin="4dp"/>

    <TextView android:id="@+id/list_spots_startdt_text"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_parkingspaceid_text"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView android:id="@+id/list_spots_number"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_spots_startdt_text"
        android:layout_toEndOf="@id/list_spots_startdt_text"
        android:layout_below="@id/list_spots_parkingspaceid_text"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"/>

    <TextView android:id="@+id/list_spots_enddt_text"
        android:textSize="12sp"
        android:text="Lat:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_startdt_text"
        android:layout_margin="4dp"/>

    <TextView android:id="@+id/list_spots_enddt"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_startdt_text"
        android:layout_toRightOf="@id/list_spots_enddt_text"
        android:layout_toEndOf="@id/list_spots_enddt_text"
        android:layout_margin="4dp"/>

    <TextView android:id="@+id/list_spots_price_text"
        android:textSize="12sp"
        android:text="Lng:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_startdt_text"
        android:layout_toRightOf="@id/list_spots_enddt"
        android:layout_toEndOf="@id/list_spots_enddt"
        android:layout_margin="4dp"/>

    <TextView android:id="@+id/list_spots_lng"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_startdt_text"
        android:layout_toRightOf="@id/list_spots_price_text"
        android:layout_toEndOf="@id/list_spots_price_text"
        android:layout_margin="4dp"/>

    <ImageButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/ib_spots_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/ic_delete" />

    <ImageButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/ib_spots_edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ib_spots_delete"
        android:layout_toStartOf="@id/ib_spots_delete"
        app:srcCompat="@drawable/ic_edit" />

</RelativeLayout>
