<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_cars_licenseplate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:text="License Plate:"
        android:layout_toEndOf="@id/cb_cars_active"
        android:layout_toRightOf="@id/cb_cars_active"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_cars_licenseplate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/list_cars_licenseplate_text"
        android:layout_toRightOf="@id/list_cars_licenseplate_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/ib_cars_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/ic_delete" />

    <ImageButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/ib_cars_edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ib_cars_delete"
        android:layout_toStartOf="@id/ib_cars_delete"
        app:srcCompat="@drawable/ic_edit" />

    <CheckBox
        android:id="@+id/cb_cars_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

</RelativeLayout>