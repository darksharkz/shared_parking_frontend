<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/list_spots_parkingspaceid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="ParkingSpace ID:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_offers_parkingspaceid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/list_spots_parkingspaceid_text"
        android:layout_toRightOf="@id/list_spots_parkingspaceid_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_spots_startdt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_parkingspaceid_text"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:text="Start:"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/list_offers_startdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_parkingspaceid_text"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@id/list_spots_startdt_text"
        android:layout_toRightOf="@id/list_spots_startdt_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/list_spots_enddt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_startdt_text"
        android:layout_margin="4dp"
        android:text="End:"
        android:textSize="14sp" />

    <TextView android:id="@+id/list_spots_enddt"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_spots_startdt_text"
        android:layout_toRightOf="@id/list_spots_enddt_text"
        android:layout_toEndOf="@id/list_spots_enddt_text"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/list_spots_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/list_offers_parkingspaceid"
        android:layout_toRightOf="@id/list_offers_parkingspaceid"
        android:text="Price/h:"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/list_offers_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toEndOf="@id/list_spots_price_text"
        android:layout_toRightOf="@id/list_spots_price_text"
        android:textStyle="bold"
        android:textSize="16sp" />

    <ImageButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/ib_offers_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/ic_delete" />

    <ImageButton
        style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/ib_offers_edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ib_offers_delete"
        android:layout_toStartOf="@id/ib_offers_delete"
        app:srcCompat="@drawable/ic_edit" />

</RelativeLayout>